<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvoAgro.View.RegisterPage">
    <StackLayout Padding="20">
        <Label Text="Registro" FontSize="30" HorizontalOptions="Center" />
        <Entry x:Name="usernameEntry" Placeholder="Nombre de usuario" />
        <Entry x:Name="emailEntry" Placeholder="Correo electrónico" Keyboard="Email" />
        <Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="True" />
        <Button Text="Registrarse" Clicked="OnRegisterButtonClicked" />
        <Button Text="Volver" Clicked="OnBackButtonClicked" />
    </StackLayout>
</ContentPage>