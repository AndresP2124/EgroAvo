<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvoAgro.View.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Iniciar sesión" FontSize="30" HorizontalOptions="Center" />
            <Entry x:Name="usernameEntry" Placeholder="Nombre de usuario" />
            <Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="True" />
            <Button Text="Iniciar sesión" Clicked="OnLoginButtonClicked" />
            <Button Text="Registrarse" Clicked="OnRegisterButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>